#!/bin/bash

vimtab() {
    command gvim --remote-tab-silent-wait "$@"
}

xvim () {
    if [ "$#" -eq 0 ]
    then
        command gvim
    elif [ "$#" -gt 1 ]
    then
        command gvim "$@"
    else
        if [ "$1" = "-" ]
        then
            tf=`tempfile -pvim-r_ -d/tmp` 
            cat > $tf
            (
                vimtab "$tf"
                rm -f $tf
            ) > /dev/null 2>&1 &
        else
            vimtab "$1" &
        fi
    fi
}

xvim "$@" 2> /dev/null

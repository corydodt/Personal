aclchg :window: +x title
vbell off
startup_message off
defscrollback 2000
msgwait 1.5
hardstatus on
hardstatus alwayslastline
hardstatus string "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..G} %H %{..Y} %m/%d %C%a "
setenv SCREEN_RUN_HOST $SCREEN_HOST
setenv LC_SCREEN_RUN_HOST $SCREEN_HOST

shelltitle '% |zsh'
